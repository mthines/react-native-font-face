{
  "name": "@mthines/typescript-package-boilerplate",
  "version": "0.1.0",
  "description": "TypeScript Module Boilerplate",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "format": "prettier --write \"src/**/*.(js|ts)\"",
    "lint": "eslint src --ext .js,.ts",
    "lint:fix": "eslint src --fix --ext .js,.ts",
    "test": "jest --config jest.config.js",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mthines/typescript-package-boilerplate"
  },
  "keywords": [
    "boilerplate",
    "typescript"
  ],
  "author": "Mads Thines",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mthines/typescript-package-boilerplate/issues"
  },
  "homepage": "https://github.com/mthines/typescript-package-boilerplate#readme",
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "@typescript-eslint/eslint-plugin": "^4.28.1",
    "@typescript-eslint/parser": "^4.28.1",
    "eslint": "^7.30.0",
    "eslint-plugin-jest": "^24.3.6",
    "jest": "^27.0.6",
    "ts-jest": "^27.0.3",
    "typescript": "^4.3.5"
  },
  "files": [
    "lib/**/*"
  ]
}
